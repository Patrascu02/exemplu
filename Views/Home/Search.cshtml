@model IEnumerable<exemplu.Models.CONCURS>

@{
    ViewData["Title"] = "Cauta Concurs";
}

<h2>Cauta Concurs</h2>

<form asp-action="Search" method="get" class="mb-4">
    <div class="form-group">
        <label for="Nume">Nume</label>
        <input type="text" name="nume" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Data">Data</label>
        <input type="date" name="data" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Categorie">Categorie</label>
        <input type="text" name="categorie" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Cauta</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Nume</th>
                <th>Data</th>
                <th>Categorie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var concurs in Model)
            {
                <tr>
                    <td>@concurs.Nume</td>
                    <td>@concurs.Data</td>
                    <td>@concurs.Categorie</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <p>Nu s-au gasit concursuri care sa corespunda criteriilor.</p>
}